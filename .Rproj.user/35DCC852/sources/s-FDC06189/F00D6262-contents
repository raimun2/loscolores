pacman::p_load_gh("andreacirilloac/paletter")
pacman::p_load(tidyverse, paletter)

image_path <- list.files("palettes/posts", "*.jpg")

palettes <- NULL

for(i in image_path){
  colours_vector <- create_palette(image_path = paste0("palettes/posts/",i),
                                   number_of_colors = 64,
                                   type_of_variable = "categorical")
  
  palettes <- rbind(palettes,colours_vector)
  
}

write_rds(palettes, "palettes.rds")
